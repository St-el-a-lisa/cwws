{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}


	<div class="container">
		<h1>Se connecter</h1>

		{% if error %}
			<div class="alert alert-danger mt-4" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<div class="mb-3">
			<label for="username" class="form-label">L'identifiant</label>

			<form action="{{path('app_login')}}" method='post'>
				<input type='text' name='_username' value="{{last_username}}" placeholder="Votre email">
			</div>
			<div class="mb-3">

				<input type='password' name='_password' placeholder="Et votre mot de passe">
			</div>
			<div class="mb-3">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button type='submit' class="btn btn-secondary">Connexion</button>
			</form>
		</div>
	</div>


</div>{% endblock %}
