{% extends 'base.html.twig' %}

{% block title %}Update your profil
{% endblock %}

{% block body %}
	<div class="container">
		<div class="main-body p-5">
			<div class="row gutters-sm">
				<div class="col-md-4 mb-3">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								<div class="mt-3">

									<h4>Hello
										{{app.user.username|capitalize}}!</h4>

									<p class="text-muted font-size-sm">
										You can update your account details here
										<br>
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-square-fill" viewbox="0 0 16 16">
											<path d="M0 14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2zm4.5-6.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5a.5.5 0 0 1 0-1"/>
										</svg>
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-square-fill" viewbox="0 0 16 16">
											<path d="M0 14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2zm4.5-6.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5a.5.5 0 0 1 0-1"/>
										</svg>
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-square-fill" viewbox="0 0 16 16">
											<path d="M0 14a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2zm4.5-6.5h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5a.5.5 0 0 1 0-1"/>
										</svg>
									</p>
								</div>
							</div>
						</div>
					</div>

					<div class="card mt-3">
						<div class="card-body">
							<div class="d-flex flex-column text-center">
								<div class="mt-3">
									<h4>
										My CwWS contact
									</h4>
									<p class="text-muted font-size-sm">If you want to change your preferred contact of CwWS, please write to us at
										<a href='#'>contact us</a>
									</p>
								</div>
							</div>
						</div>
					</div>


				</div>


				<div class="col-md-8">
					<div class="card mb-3">
						<div class="card-body">
							<div class="row">
								{{ form_start(updateProfilForm) }}
								<div class="col-sm-3">
									<h6 class="mb-0">First Name:</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									{{ form_widget(updateProfilForm.firstname, {'attr': {'class': 'form-control'}}) }}
								</div>
								<hr>
								<div class="col-sm-3">
									<h6 class="mb-0">Last Name:</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									{{ form_widget(updateProfilForm.lastname, {'attr': {'class': 'form-control'}}) }}
								</div>


							</div>
							<hr>

							<div class="row">
								<div class="col-sm-3">
									<h6 class="mb-0">Address :
									</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									8 bis Rue de la Fontaine au Roi, 75011 Paris, France
								</div>
							</div>
							<hr>
							<div class="row">
								<div class="col-sm-12">
									<div class="text-center">
										<button type="submit" class="btn btn-success">Submit</button>
										{{ form_end(updateProfilForm) }}
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="row gutters-sm">
						<div class="col-sm-6 mb-3">
							<div class="card h-100">
								<div class="card-body">
									<h6 class="d-flex align-items-center mb-3">Adress 1:</h6>
									<small>Date</small>
								</div>
							</div>
						</div>
						<div class="col-sm-6 mb-3">
							<div class="card h-100">
								<div class="card-body">
									<h6 class="d-flex align-items-center mb-3">Adress 2</h6>
									<small>Date</small>
									<small>Statut</small>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
