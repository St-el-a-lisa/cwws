{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
{% endblock %}

{% block body %}
	<div class="container">
		<h3 class="pb-4 mb-4  border-bottom">{{ product.name }}</h3>
		<div class="card flex-md-row mb-4 box-shadow h-md-250">
			<div class="card-img-right flex-auto d-none d-md-block">
				{% if product.getImage()|length > 0 %}
					{% for image in product.getImage() %}
						<img src="/upload/images/products/{{product.getId}}/{{image.getName}}" alt="{{ product.name }}" class="img-fluid" style="max-width: 400px; max-height: 500px;">
					{% endfor %}
				{% else %}
					<p>Aucune image disponible</p>
				{% endif %}
			</div>

			<div class="card-body d-flex flex-column align-items-start">
				<p class="card-text mb-auto">{{ product.description|raw }}</p>
				<div class=" container">
					<h6 class="card-subtitle mb-2 text-body-secondary">Prix :
						{{ product.price/100 }}€</h6>
					<div class="d-flex justify-content-end">
						<a href="{{path('app_products')}}" class="btn btn-outline-secondary me-2">Retour à la page produit</a>
						<a href="#" class="btn btn-sm btn-light">
							<img src="{{ asset('media/nav/panier.png') }}" alt="ajout_panier" style="vertical-align: middle;" width="30" height="30">
						</a>
					</div>

				</div>
			</div>
		</div>
		<div class="card mb-3" style="max-width: 540px;">
			<div class="row g-0">
				<div class="col-md-4">
					{% if product.getImage()|length > 0 %}

						{% for image in product.getImage() %}
							<img src="/upload/images/products/{{product.getId}}/{{image.getName}}" class="img-fluid rounded-start" alt="{{ product.name }}">
						{% endfor %}
					{% else %}
						<p>Aucune image disponible</p>
					{% endif %}
				</div>


				<div class="col-md-8">
					<div class="card-body">
						<h6 class="card-subtitle mb-2 text-body-secondary">Prix :
							{{ product.price/100 }}€</h6>
						<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
						<div class="d-flex justify-content-end">
							<a href="{{path('app_products')}}" class="btn btn-outline-secondary me-2">Retour à la page produit</a>
							<a href="{{path('app_cart')}}" class="btn btn-sm btn-light">
								<img src="{{ asset('media/nav/panier.png') }}" alt="ajout_panier" style="vertical-align: middle;" width="30" height="30">
							</a>
						</div>
					</p>
				</div>
			</div>
		</div>
	</div>

	{% if app.user %}
		{% include "products/reviewForm.html.twig" %}
	{% endif %}
	{% include "products/reviews.html.twig" %}
{% endblock %}
